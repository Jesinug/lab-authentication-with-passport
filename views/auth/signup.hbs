<h1>SIGN UP FORM</h1>

<form method="POST" action="/auth/signup">
    <label for="username" class="form-label">Username: </label>
    <input required type="text" class="form-label" name="username" id="username">
    <label for="password" class="form-label">Password: </label>
    <input required type="password" class="form-label" name="password" id="password">
    <button type="submit" class="btn">Submit</button>
</form>

{{#if errorMessage}}
{{errorMessage}}
{{/if}}